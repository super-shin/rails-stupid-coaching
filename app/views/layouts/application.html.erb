  <body>
    <div class="container">
      <div class="typo typo1">STUPID COACHING</div>
      <div class="row align-items-center">
        <div class="col-md-6">
        <!-- Content goes here -->
        <div class="content text-center text-white">
          <%= yield %>
        </div>
      </div>
      <div class="col-md-6">
        <!-- Image container goes here -->
        <div class="image-container">
